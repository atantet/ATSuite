OPT=/opt/local/
INC=-I$(PHD)/dev/include -I$(HOME)/local/include -I$(OPT)/include/eigen3
LIBS=-L$(HOME)/local/lib -ligraph
ALGSRCDIR=$(HOME)/local/alglib/
CC=g++ -fopenmp
CFLAGS=-Wall

EXE=code_com

all:$(EXE)

$(EXE):$(EXE).cpp $(ALGSRCDIR)/*.cpp
	$(CC) $(CFLAGS) $(INC) $(LIBS) $(ALGSRCDIR)/*.cpp $(EXE).cpp -o $(EXE)

clean:
	rm -f *.o $(EXE)
